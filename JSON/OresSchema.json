{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/product.schema.json",
  "title": "JSON Schema",
  "description": "JSON Schema for Minecraft datasets",
  "type": "array",
  "properties": {
    "ore": {
      "description": "The unique identifier for a product",
      "type": "integer"
    },
    "tool": {
      "description": "The unique identifier for a product",
      "type": "integer"
    },
    "abundance": {
      "description": "The unique identifier for a product",
      "type": "integer"
    },
    "biome": {
      "description": "The unique identifier for a product",
      "type": "array",
      "items": [
        {
          "type": "object",
          "properties": {
            "name": {
              "description": "The unique identifier for a product",
              "type": "integer"
            },
            "rarity": {
              "description": "The unique identifier for a product",
              "type": "integer"
            },
            "temperature": {
              "description": "The unique identifier for a product",
              "type": "integer"
            },
            "type": {
              "description": "The unique identifier for a product",
              "type": "integer"
            },
            "blocks_biome": {
              "description": "The unique identifier for a product",
              "type": "array",
              "items": [
                {
                  "name": "grass_block",
                  "biome": "taiga, plains, forest, birch_forest, dark_forest",
                  "renewable": 1,
                  "tool": "wooden",
                  "flammable": 0,
                  "breaking_time": 0.9
                },
                {
                  "name": "dirt",
                  "biome": "taiga, plains, forest, birch_forest, dark_forest, swamp, jungle",
                  "renewable": 1,
                  "tool": "wooden",
                  "flammable": 0,
                  "breaking_time": 0.75
                }
              ]
            }
          },
          "required": [
            "name",
            "rarity",
            "temperature",
            "type"
          ]
        }
      ]
    }
  },
  "required": [
    "ore",
    "tool",
    "abundance"
  ]
}